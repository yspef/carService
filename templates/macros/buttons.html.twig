{# generic template #}

{% macro btn(text, btn_class = 'btn-primary', icon_class = '', show_balloon = false, type = 'submit', formaction = '', confirmation = false, target = false) %}

    {% if false == target %}
        {% set target = '' %}
    {% else %}
        {% set target = '_blank' %}
    {% endif %}

    <button formtarget="{{target}}" type="{{type}}" class="btn {{btn_class}}" data-toggle="tooltip" data-placement="top" {% if true == show_balloon %}title="{{text}}"{% endif %}  {% if '' != formaction %}formaction="{{formaction}}"{% endif %} {% if true == confirmation %} onclick="return confirm('{{'confirm'|trans}}')"{% endif %}>{% if false == show_balloon %}{{ button_label|default(text) }}{% endif %}
        {% if '' != icon_class %}
            <span>
                <i class="{{icon_class}}"></i>
            </span>
        {% endif %}
    </button>
{% endmacro %}

