{% import '/macros/buttons.html.twig' as fap_macros %}

{% include '/common/_form_header.html.twig' with { 'mainTitle': mainTitle, 'url' : url } %}

<div class="card border-secondary p-2">

    <div class="card-body">

        {{ form_errors(form) }}

        {{ form_start(form) }}

            <div class="row">
                <div class="col-md-auto">
                    {{ form_row( form.date ) }}
                </div>
                <div class="col-md-auto">
                    {{ form_row( form.owner ) }}
                </div>
                <div class="col-md-auto">
                    {{ form_row( form.car ) }}
                </div>

                <div class="col-md-auto">
                    {{ form_row( form.totalPrice ) }}
                </div>

                <div class="col-md-12">
                    {{ 'services'|trans }}
                    {% include '/budget/_row_budget.html.twig' %}
                </div>
            </div>
        </br>

        <div class="row">
            <div class="col-md-12 text-right">
                {{ fap_macros.btn_save() }}
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>

