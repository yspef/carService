{% import '/macros/buttons.html.twig' as fap_macros %}

{% extends '/main/home.html.twig' %}

{% set title = 'budgets'|trans %}

{% block title %}{{title}}{% endblock %}

{% block content %}

<br>

<div class="alert alert-primary">
    <div class="row">
        <div class="col-md-auto">
            <h4>{{title}}</h4>
        </div>

        <div class="col-md-auto">
        </div>

        <div class="col text-right">
            <h4>{{ fap_macros.btn_link_new( path('car_service_budgets_new') ) }}</h4>
        </div>
    </div>

    {% include '/budget/_filter.html.twig' %}
</div>

<div class="table-list table-responsive">
    <table class="table table-index table-striped table-sm">
        <thead>
            <tr>
                {# <th>{{ knp_pagination_filter }}</th> #}
                <th>{{ knp_pagination_sortable(pagination, 'date'|trans, 'date') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'owner'|trans, 'owner.lastname') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'patent'|trans, 'car.patent') }}</th>
                <th scope="col" class="text-center pl-0 pr-0">{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for row in pagination %}
            <tr>
                <td class="text-left">{{ row.date }}</td>
                <td class="text-left">{{ row.owner }}</td>
                <td class="text-left">{{ row.patent }}</td>
                <td class="float-right d-table">
                    {% include '/budget/_index_actions.html.twig' %}
                </td>                
            </tr>
        {% else %}
            <tr>
                <td colspan="20">{{'no.data'|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}    
</div>

{% endblock %}
